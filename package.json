{
  "name": "g4a-school-portal",
  "version": "1.7.0",
  "main": "index.js",
  "author": "Favour Max-Oti <maxotif@gmail.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "yarn": ">=1.22.0"
  },
  "workspaces": [
    "api",
    "web"
  ],
  "scripts": {
    "preinstall": "node -e \"if(process.version.split('.')[0].substring(1) < 20) { console.error('❌ Node.js 20+ is required. Current version:', process.version); process.exit(1); }\"",
    "api:dev": "yarn workspace api start:dev",
    "api:build": "yarn workspace api build",
    "api:start": "yarn workspace api start",
    "api:lint": "yarn workspace api lint",
    "api:test": "yarn workspace api test",
    "api:test:e2e": "yarn workspace api test:e2e",
    "api:test:cov": "yarn workspace api test:cov",
    "web:dev": "yarn workspace web dev",
    "web:build": "yarn workspace web build",
    "web:start": "yarn workspace web start",
    "web:lint": "yarn workspace web lint",
    "web:test": "yarn workspace web test",
    "web:test:e2e": "yarn workspace web test:e2e",
    "web:test:cov": "yarn workspace web test:cov",
    "prepare": "husky",
    "lint": "biome lint --write",
    "check": "biome check .",
    "format": "biome format --write",
    "format:check": "biome format --check",
    "link:fix": "biome link --apply",
    "test": "yarn api:test && yarn web:test",
    "build": "yarn api:build && yarn web:build",
    "dev": "concurrently \"yarn api:dev\" \"yarn web:dev\"",
    "version:patch": "standard-version --release-as patch",
    "version:minor": "standard-version --release-as minor",
    "version:major": "standard-version --release-as major",
    "release": "standard-version"
  },
  "dependencies": {
    "typescript": "^5.7.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.3",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "concurrently": "^8.2.2",
    "eslint": "^9.35.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "standard-version": "^9.5.0",
    "typescript": "^5.7.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "biome check --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
