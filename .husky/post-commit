# Check if this is a feature commit and bump version accordingly
COMMIT_MSG=$(git log -1 --pretty=%B)
COMMIT_TYPE=$(echo "$COMMIT_MSG" | head -n1 | cut -d: -f1 | cut -d'(' -f1)

case $COMMIT_TYPE in
  "feat")
    echo "üöÄ Feature commit detected - bumping minor version..."
    yarn version:minor || echo "‚ö†Ô∏è  Version bump failed, but commit was successful"
    ;;
  "fix")
    echo "üêõ Bug fix commit detected - bumping patch version..."
    yarn version:patch || echo "‚ö†Ô∏è  Version bump failed, but commit was successful"
    ;;
  *)
    echo "‚ÑπÔ∏è  No version bump needed for commit type: $COMMIT_TYPE"
    ;;
esac